@model List<Kategori>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Default/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<br />
		<h4 class="page-title">Kategori</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									
									<th scope="col">Kategori Adi</th>
									
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										
										<td>@item.KategoriAdi</td>
										
										<td><a href="/Kategori/DeleteKategori/@item.KategoriId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Kategori/UpdateKategori/@item.KategoriId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Kategori/CreateKategori/" class="btn btn-primary">Yeni Kategori Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



@model List<Uye>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Default/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<br />
		<h4 class="page-title">Uye</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Uye Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Uye ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>

									<th scope="col">Adı-Soyadı</th>
									<th scope="col">Telefon</th>
									<th scope="col">EMail</th>
									<th scope="col">Adres</th>
									<th scope="col">Üyelik Tarihi</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>

										<td>@item.AdSoyad</td>
										<td>@item.Telefon</td>
										<td>@item.Email</td>
										<td>@item.Adres</td>
										<td>@item.UyelikTarihi</td>
										

										<td><a href="/Uye/DeleteUye/@item.UyeId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Uye/UpdateUye/@item.UyeId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Uye/CreateUye/" class="btn btn-primary">Yeni Üye Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


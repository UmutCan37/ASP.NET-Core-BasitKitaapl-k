@model List<Kitap>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Default/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<br />
		<h4 class="page-title">Kitap</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kitap Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kitap ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Baslik</th>
									<th scope="col">Yazar Adi</th>
									<th scope="col">Yayınevi</th>
									<th scope="col">ISBN</th>
									<th scope="col">Basim Yılı</th>
									<th scope="col">Adet</th>
									<th scope="col">Durum</th>
									<th scope="col">Kategori Adi</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Aktif/Pasif</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Baslik</td>
										<td>@item.Yazar</td>
										<td>@item.Yayinevi</td>
										<td>@item.ISBN</td>
										<td>@item.BasimYili</td>
										<td>@item.Adet</td>
										<td>@item.Durum</td>
										<td>@item.Kategori.KategoriAdi</td>
										<td><a href="/Kitap/DeleteKitap/@item.KitapId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Kitap/UpdateKitap/@item.KitapId" class="btn btn-success">Güncelle</a></td>
										@if (item.Durum == true) 
										{
											<td><a href="/Kitap/ChangeIsReadToFalse/@item.KitapId" class="btn btn-dark">Pasif Yap </a></td>
										}
										else
										{
											<td><a href="/Kitap/ChangeIsReadToTrue/@item.KitapId" class="btn btn-info">Akitf Yap</a></td>
										}
										
									</tr>
								}
							</tbody>
						</table>
						<a href="/Kitap/CreateKitap/" class="btn btn-primary">Yeni Kitap Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



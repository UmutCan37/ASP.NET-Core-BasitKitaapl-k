@model OduncIslem
@{
    ViewData["Title"] = "CreateOduncIslem";
    Layout = "~/Views/Default/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kitap</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kitap Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Üyeye Verme Tarihi</label>
							<input type="text" asp-for="OduncAlmaTarihi" class="form-control" />
							<br />
							<label>Geri Verme Tarihi</label>
							<input type="text" asp-for="IadeTarihi" class="form-control" />
							<br />
							<label>Durum</label>
							<input type="text" asp-for="Durum" class="form-control" />
							<br />
							@Html.LabelFor(x => x.Uye)
							@Html.DropDownListFor(x => x.UyeId, (List<SelectListItem>)ViewBag.dgr1, new
								{ @class = "form-control" })
							<br />
							@Html.LabelFor(x => x.Personel)
							@Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.dgr2, new
								{ @class = "form-control" })
							<br />
							@Html.LabelFor(x => x.Kitap)
							@Html.DropDownListFor(x => x.KitapId, (List<SelectListItem>)ViewBag.dgr3, new
								{ @class = "form-control" })
							<br />



							<button class="btn btn-primary">Kitap Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

